package Dec18;

public class Q1 {

	
public static void main(String[] args) {
	loopI(0,0);
}

private static void loopI(int i, int j) {
	// TODO Auto-generated method stub
	if(i<5)
		System.out.println();
		loopII(0,j);
	{
		loopI(i, j);
		i++;
	}
	
}

private static void loopII(int i, int j) {
	// TODO Auto-generated method stub
	
	if(j < 5)
	{
		if(j+i>=4)
			System.out.print("*");
		else
			System.out.print(" ");
		j++;
		loopII(i, j);
	}
}
}
